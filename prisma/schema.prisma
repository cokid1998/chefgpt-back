generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

enum Food_Location {
  COLD
  FROZEN
  ROOM_TEMP
}

enum Option_Name {
  A
  B
}

enum AuthProvider {
  LOCAL
  KAKAO
}

model User {
  id           Int      @id @default(autoincrement())
  createdAt    DateTime @default(now())
  email        String   @unique
  password     String?
  nickname     String?
  thumbnail    String?
  refreshToken String?

  authProvider AuthProvider

  // User와 Food의 관계
  foods Food[]

  // User와 Vote의 관계
  voteUsers Vote_User[]

  // User와 Recipe의 관계
  recipes     Recipe[]
  recipeLikes Recipe_Like[]
}

model Food_Category {
  id   Int    @id @default(autoincrement())
  name String @unique

  // Food_Category와 Food의 관계
  foods Food[]
}

model Food {
  id              Int            @id @default(autoincrement())
  name            String
  location        Food_Location?
  quantity        Int?
  unit            String?
  expiration_date DateTime?      @db.Timestamptz()
  memo            String?

  // 외부키
  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  category   Food_Category @relation(fields: [categoryId], references: [id])
  categoryId Int

  @@index([userId])
  @@index([categoryId])
}

model Vote {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  optionA     String
  optionB     String
  startDate   DateTime
  endDate     DateTime

  // Vote와 User의 관계
  voteUsers   Vote_User[]
  recipeLikes Recipe_Like[]
}

model Vote_User {
  id           Int         @id @default(autoincrement())
  voteId       Int
  userId       Int
  selectOption Option_Name

  vote Vote @relation(fields: [voteId], references: [id])
  user User @relation(fields: [userId], references: [id])

  // 동일한 userId는 동일한 VoteId를 여러개 가질 수 없음
  @@unique([voteId, userId])
}

model Article {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  title       String
  summary     String?
  contentJSON String
  readingTime Int
  viewCount   Int      @default(0)

  // 외부키
  categoryId Int
  category   Article_Category @relation(fields: [categoryId], references: [id])

  articleTagRelations Article_Tag_Relation[]

  @@index([categoryId])
}

model Article_Category {
  id   Int    @id @default(autoincrement())
  name String

  // Article관의 관계
  articles Article[]
}

model Article_Tag {
  id   Int    @id @default(autoincrement())
  name String @unique

  articleTagRelations Article_Tag_Relation[]
}

model Article_Tag_Relation {
  articleId Int
  tagId     Int

  article Article     @relation(fields: [articleId], references: [id])
  tag     Article_Tag @relation(fields: [tagId], references: [id])

  @@id([articleId, tagId])
}

model Recipe {
  id                Int                 @id @default(autoincrement())
  title             String
  description       String
  cookingTime       String?
  recipeIngredients Recipe_Ingredient[]
  recipeSteps       Recipe_Step[]
  viewCount         Int                 @default(0)

  user   User @relation(fields: [userId], references: [id])
  userId Int

  categoryId Int
  category   Recipe_Category @relation(fields: [categoryId], references: [id])
}

model Recipe_Ingredient {
  id     Int    @id @default(autoincrement())
  name   String
  amount String

  recipeId Int
  recipe   Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)
}

model Recipe_Step {
  id          Int     @id @default(autoincrement())
  stepNumber  Int
  stepTitle   String
  description String
  tip         String?

  recipeId Int
  recipe   Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)
}

model Recipe_Category {
  id      Int      @id @default(autoincrement())
  name    String
  recipes Recipe[]
}

model Recipe_Like {
  id       Int @id @default(autoincrement())
  recipeId Int
  userId   Int

  vote Vote @relation(fields: [recipeId], references: [id])
  user User @relation(fields: [userId], references: [id])

  // 동일한 userId는 동일한 recipeId를 여러개 가질 수 없음
  @@unique([recipeId, userId])
}
