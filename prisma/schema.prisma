generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

// 음식 보관 위치 Enum
enum Food_Location {
  COLD
  FROZEN
  ROOM_TEMP
}

enum Option_Name {
  A
  B
}

enum AuthProvider {
  LOCAL
  KAKAO
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  password  String?
  nickname  String?
  thumbnail String?

  authProvider AuthProvider

  // User와 Food의 관계
  foods Food[]

  // User와 Vote의 관계
  voteUsers Vote_User[]
}

model Category {
  id   Int    @id @default(autoincrement())
  name String @unique

  // Category와 Food의 관계
  foods Food[]
}

model Food {
  id              Int            @id @default(autoincrement())
  name            String
  location        Food_Location?
  quantity        Int?
  unit            String?
  expiration_date DateTime?      @db.Timestamptz()
  memo            String?

  // 외부키
  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  category   Category @relation(fields: [categoryId], references: [id])
  categoryId Int

  @@index([userId])
  @@index([categoryId])
}

model Vote {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  optionA     String
  optionB     String
  startDate   DateTime
  endDate     DateTime

  // Vote와 User의 관계
  voteUsers Vote_User[]
}

model Vote_User {
  id           Int         @id @default(autoincrement())
  voteId       Int
  userId       Int
  selectOption Option_Name

  vote Vote @relation(fields: [voteId], references: [id])
  user User @relation(fields: [userId], references: [id])

  // 동일한 userId는 동일한 VoteId를 여러개 가질 수 없음
  @@unique([voteId, userId])
}

model Article {
  id          Int     @id @default(autoincrement())
  title       String
  summary     String?
  content     String
  readingTime Int
  viewCount   Int     @default(0)

  // 외부키
  categoryId Int
  category   Article_Category @relation(fields: [categoryId], references: [id])

  articleTagRelations Article_Tag_Relation[]

  @@index([categoryId])
}

model Article_Category {
  id   Int    @id @default(autoincrement())
  name String

  // Article관의 관계
  articles Article[]
}

model Article_Tag {
  id   Int    @id @default(autoincrement())
  name String @unique

  articleTagRelations Article_Tag_Relation[]
}

model Article_Tag_Relation {
  articleId Int
  tagId     Int

  article Article     @relation(fields: [articleId], references: [id])
  tag     Article_Tag @relation(fields: [tagId], references: [id])

  @@id([articleId, tagId])
}
